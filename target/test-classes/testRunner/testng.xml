<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite thread-count="1" name="Suite" parallel ="tests" verbose="3">

	<listeners>
		<listener class-name="com.qa.app.listeners.AnnotationTransformer" />
		<listener class-name="com.qa.app.listeners.ExtentReportListener" />
	</listeners>

	<!-- Start First Test-->
	<test name="Landing Page in Chrome" thread-count="1">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.app.tests.LandingPageTest" />
		</classes>
	</test> <!-- End First Test-->

	<!-- Start First Test -->
	<test name="Tests in  Firefox" parallel="methods" thread-count="1">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.app.tests.LoginPageTest" />
		</classes>
	</test> <!-- End First Test-->

	<!-- Start First Test
	<test name="Tests in  Edge" parallel="methods" thread-count="1">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.app.tests.LoginTest" />
		</classes>
	</test> End First Test-->

</suite>